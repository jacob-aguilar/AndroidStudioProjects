<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/logo"
    android:orientation="vertical">


    <Button
        android:id="@+id/botonjugar"
        android:layout_width="135dp"
        android:layout_height="108dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="138dp"
        android:layout_marginTop="253dp"
        android:layout_marginEnd="122dp"
        android:background="@drawable/botonjugar"
        android:onClick="clickjugar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/botonjugar"
        android:layout_alignStart="@+id/botonjugar"
        android:layout_alignEnd="@+id/botonjugar"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-75dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="-71dp"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal">

        <View
            android:layout_width="1dp"
            android:layout_height="5dp"
            android:layout_weight="1"></View>

        <Button
            android:id="@+id/botonpremios"
            android:layout_width="75dp"
            android:layout_height="93dp"
            android:layout_weight="1"
            android:background="@drawable/premios2"
            android:onClick="clickniveles" />

        <View
            android:layout_width="5dp"
            android:layout_height="8dp"
            android:layout_weight="1"></View>

        <Button
            android:id="@+id/botonacercade"
            android:layout_width="70dp"
            android:layout_height="83dp"
            android:layout_weight="1"
            android:background="@drawable/botonsonido"
            android:onClick="clickConfigurar" />

        <View
            android:layout_width="1dp"
            android:layout_height="5dp"
            android:layout_weight="1"></View>
    </LinearLayout>

    <TextView
        android:id="@+id/textscore"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/fondoet"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textColorLink="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>