<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostActivity">


    <ImageButton
        android:id="@+id/imageSelect"
        android:layout_width="wrap_content"
        android:layout_height="274dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="13dp"
        android:background="@mipmap/add_btn"
        android:scaleType="center"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/titleField"
        android:layout_width="315dp"
        android:layout_height="56dp"
        android:layout_below="@+id/imageSelect"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:background="@drawable/input_outline"
        android:ems="10"
        android:hint="Titulo"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/desField"
        android:layout_width="314dp"
        android:layout_height="51dp"
        android:layout_below="@+id/titleField"
        android:layout_alignBottom="@+id/publicarbtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="84dp"
        android:background="@drawable/input_outline"
        android:ems="10"
        android:hint="Descripcion "
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/publicarbtn"
        android:layout_width="113dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/titleField"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-148dp"
        android:background="@android:color/white"
        android:text="Publicar" />

</RelativeLayout>


