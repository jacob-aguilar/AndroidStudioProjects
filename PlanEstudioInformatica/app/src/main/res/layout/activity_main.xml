<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/panel_espera"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="25dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="Cargando plan de estudios"
            android:gravity="center"/>
        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="150dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="Por favor espere"
            android:gravity="center"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/panel_plan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <Button
            android:id="@+id/btnbuscar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buscar"
            android:textSize="25sp"
            android:layout_alignParentRight="true"
            />
        <EditText
            android:id="@+id/buscar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textSize="25sp"
            android:textColorHighlight="#000"
            android:layout_toLeftOf="@id/btnbuscar"
            android:hint="Buscar Clase"
            />
        <ListView
            android:id="@+id/plan_estudio"
            android:layout_below="@id/buscar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:divider="@android:color/transparent"/>
    </RelativeLayout>
</LinearLayout>