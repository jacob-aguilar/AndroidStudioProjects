<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/logo"
    android:orientation="vertical">

    <View
        android:layout_width="436dp"
        android:layout_height="195dp"></View>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="1dp"
            android:layout_height="5dp"
            android:layout_weight="4"></View>

        <Button
            android:id="@+id/botonjugar"
            android:layout_width="275dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:layout_weight="2"
            android:background="@drawable/botonjugar2"
            android:onClick="clickjugar" />

        <View
            android:layout_width="1dp"
            android:layout_height="5dp"
            android:layout_weight="4"></View>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:orientation="horizontal">

        <View
            android:layout_width="1dp"
            android:layout_height="5dp"
            android:layout_weight="1"></View>

        <Button
            android:id="@+id/botonpremios"
            android:layout_width="36dp"
            android:layout_height="98dp"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:background="@drawable/premios2"
            android:onClick="clickpuntajes" />


        <View
            android:layout_width="1dp"
            android:layout_height="5dp"
            android:layout_weight="1"></View>

        <Button
            android:id="@+id/botonacercade"
            android:layout_width="32dp"
            android:layout_height="88dp"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:background="@drawable/botonsonido"
            android:onClick="clickConfigurar" />


        <View
            android:layout_width="1dp"
            android:layout_height="5dp"
            android:layout_weight="1"></View>

    </LinearLayout>
</LinearLayout>