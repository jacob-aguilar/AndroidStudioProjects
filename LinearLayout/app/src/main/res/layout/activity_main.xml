<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/texto1"
            android:layout_width="500dp"
            android:layout_height="200dp"
            android:background="#b3f"
            android:text="@string/msg1"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/texto2"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:background="#1b1"
                android:text="@string/msg1"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/texto3"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:background="#2bf"
                android:text="@string/msg1"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/texto4"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:background="#f15f"
                android:text="@string/msg1"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/texto5"
                android:layout_width="200dp"
                android:layout_height="160dp"
                android:layout_weight="1"
                android:background="#f44"
                android:text="@string/msg1"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            </LinearLayout>

            <TextView
                android:id="@+id/texto6"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:background="#444"
                android:text="@string/msg1"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/texto7"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:background="#b999"
                android:text="@string/msg1"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>