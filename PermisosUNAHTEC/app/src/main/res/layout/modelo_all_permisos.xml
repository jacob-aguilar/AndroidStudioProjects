<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="#FFFF"
        card_view:cardCornerRadius="5dp"
        card_view:cardUseCompatPadding="true">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                 android:layout_weight="5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nombreAllpermisos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="Nombre"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView

                    android:id="@+id/tipoPermisoAllpermisos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:layout_below="@+id/nombreAllpermisos"
                    android:text="tipo de permiso"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"
                    />






                <TextView
                    android:id="@+id/fechaInicioAllpermisos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:text="fechaInicio"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="30dp"
                    android:textColor="@color/secundaryColor"
                    android:textSize="12sp"
                    />

                <TextView
                    android:id="@+id/fechaFinAllpermisos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/fechaInicioAllpermisos"
                    android:text="fechaFin"
                    android:textColor="@color/secundaryColor"
                    android:textSize="12sp"
                    />



            <ImageView
                android:id="@+id/imagenAllpermisos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_weight="0.2" />

            </RelativeLayout>
     </android.support.v7.widget.CardView>

</RelativeLayout>