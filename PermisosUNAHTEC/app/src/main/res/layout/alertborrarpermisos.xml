<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/obtenertDeptos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:focusable="false"
        android:hint="Departamentos" />

    <EditText
        android:id="@+id/obtenertEmpleadoss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/obtenertDeptos"
        android:layout_margin="20dp"
        android:focusable="false"
        android:hint="Empleados" />

    <EditText
        android:id="@+id/fechaInicioAlert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/obtenertEmpleadoss"
        android:layout_margin="20dp"
        android:focusable="false"
        android:hint="Fecha de inicio" />

    <EditText
        android:id="@+id/fechaFinAlert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fechaInicioAlert"
        android:layout_margin="20dp"
        android:focusable="false"
        android:hint="Fecha Fin" />

    <Button

        android:id="@+id/botonAlert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fechaFinAlert"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="50dp"
        android:background="@drawable/boton"
        android:text="ACEPTAR"
        android:onClick="borrarPermisosPerzonalizado"
        android:textColor="#ffff" />

    <Button

        android:id="@+id/botonReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fechaFinAlert"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="50dp"
        android:background="@drawable/boton"
        android:text="RESET"
        android:onClick="borrarPermisosPerzonalizado"
        android:textColor="#FFFF"/>


</RelativeLayout>