<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AgregarNuevoEmpleado">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="6dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/nuevoDepto"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=" Nuevo Departamento"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/indicacion"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=" Crea tu nuevo departamento aquÃ­:"
                android:textColor="#757575"
                android:textSize="18sp"
                android:layout_below="@+id/nuevoDepto"
                android:layout_marginTop="10dp"/>



            <EditText
                android:id="@+id/EditCrearDepartamento"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:paddingLeft="5dp"
                android:maxEms="30"
                android:maxLength="30"
                android:layout_marginTop="50dp"
                android:inputType="textCapCharacters"
                android:layout_below="@+id/nuevoDepto"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="10dp"
                android:hint="  Ingresa el nombre"
                />

            <Button
                android:id="@+id/btnGuardar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:background="@drawable/boton"
                android:text="Guardar"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:onClick="alClickearBoton"
                android:layout_below="@+id/EditCrearDepartamento"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>